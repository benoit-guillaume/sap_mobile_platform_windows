<Page xmlns:FlowEngine="using:SAP.Logon.FlowEngine"
    x:Class="LogonFlowWindows.LogonPageMobilePlace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LogonFlowWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Light">

    <Page.Resources>
        <ImageBrush ImageSource="/Assets/StripedBackground_PS_Landscape.png" x:Key="BackgroundImage" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <FlowEngine:LogonUI Name="logonFlow" ApplicationId="com.sap.windows.flight" Background="{StaticResource BackgroundImage}" HasDemoMode="True" MobilePlaceEnabled="True">

        </FlowEngine:LogonUI>
    </Grid>
</Page>
